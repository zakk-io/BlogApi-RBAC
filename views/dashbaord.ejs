<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Group Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="#">Group Dashboard</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" href="dashboard.html">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="posts.html">Posts</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <!-- Group Dashboard Heading -->
        <h1 class="text-3xl font-bold mb-4">Group Dashboard</h1>

        <!-- Members and Invitations Section -->
        <div class="row">
            <!-- Members Table -->
            <div class="col-md-6 mb-4">
                <h2 class="text-2xl font-semibold mb-3">Members</h2>
                <table class="table table-striped table-bordered bg-white">
                    <thead class="table-dark">
                        <tr>
                            <th>Member</th>
                            <th>Role</th>
                            <th>Posts</th>
                            <th>Comments</th>
                            <th>Set Role</th>
                            <th>Kick</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>John Doe</td>
                            <td>Admin</td>
                            <td>12</td>
                            <td>34</td>
                            <td>
                                <select class="form-select" aria-label="Set Role">
                                    <option value="admin">Admin</option>
                                    <option value="member">Member</option>
                                </select>
                            </td>
                            <td>
                                <button class="btn btn-danger">Kick</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Invitations Table -->
            <div class="col-md-6 mb-4">
                <h2 class="text-2xl font-semibold mb-3">Invited Users</h2>
                <table class="table table-striped table-bordered bg-white">
                    <thead class="table-dark">
                        <tr>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>example@mail.com</td>
                            <td>Member</td>
                            <td>
                                <button class="btn btn-danger">Delete Invitation</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
